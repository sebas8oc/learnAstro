---
import axios from 'axios';

// 'https://nest-pokedex-production-f37e.up.railway.app/api/v2/pokemon?limit=50'
//  http://127.0.0.1:3000/api/v2/pokemon?limit=300
const response = await axios.get('http://127.0.0.1:3000/api/v2/pokemon?limit=300');

// Access the array directly
const pokemonList = response.data;

// Iterate over all Pokemon and get their names
const pokemonNames = pokemonList.map((pokemon) => pokemon.name);

console.log(pokemonNames); // Array of all Pokemon names

